<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service consumes="text/plain" name="i5.las2peer.restMapper.tools.ExampleClass" path="books/{id}" produces="text/plain" version="1.0">
  <methods>
    <method httpMethod="get" name="getPageCount" path="pages" type="int">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
      </parameters>
    </method>
    <method httpMethod="put" name="createNewBook" type="boolean">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
        <parameter annotation="header" default="" index="1" name="User-Agent" type="java.lang.String"/>
      </parameters>
    </method>
    <method consumes="audio/ogg,audio/mpeg" httpMethod="post" name="addAudioBookTrack" path="audiobooks/{audiobookname}" type="boolean">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
        <parameter annotation="path" index="1" name="audiobookname" type="java.lang.String"/>
        <parameter annotation="content" index="2" name="" type="java.lang.String"/>
      </parameters>
    </method>
    <method httpMethod="get" name="getAudioBookTrackMp4" path="audiobooks/{audiobookname}" produces="audio/mp4" type="java.lang.String">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
        <parameter annotation="path" index="1" name="audiobookname" type="java.lang.String"/>
      </parameters>
    </method>
    <method httpMethod="get" name="getPageContent" path="pages/{page}" type="java.lang.String">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
        <parameter annotation="path" index="1" name="page" type="int"/>
        <parameter annotation="query" default="false" index="2" name="fullpage" type="boolean"/>
      </parameters>
    </method>
    <method httpMethod="get" name="getAudioBookTrackOgg" path="audiobooks/{audiobookname}" produces="audio/ogg" type="java.lang.String">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
        <parameter annotation="path" index="1" name="audiobookname" type="java.lang.String"/>
      </parameters>
    </method>
    <method httpMethod="get" name="special" path="special" type="i5.las2peer.restMapper.HttpResponse">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
      </parameters>
    </method>
    <method httpMethod="delete" name="deleteBook" type="boolean">
      <parameters>
        <parameter annotation="path" index="0" name="id" type="int"/>
      </parameters>
    </method>
  </methods>
</service>
